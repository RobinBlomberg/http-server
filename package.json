{
  "name": "@robinblomberg/http-server",
  "version": "0.3.2",
  "author": "Robin Blomberg",
  "type": "module",
  "main": "lib/index.js",
  "types": "main.d.ts",
  "dependencies": {
    "@robinblomberg/stream": "^0.1.3",
    "@robinblomberg/url": "^0.7.7"
  },
  "devDependencies": {
    "@robinblomberg/eslint-config-robinblomberg": "^0.2.20",
    "@robinblomberg/http-client": "^0.2.4",
    "@robinblomberg/schema": "^0.2.2",
    "@robinblomberg/test": "^0.5.9",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.15.0",
    "husky": "^4.3.5",
    "lint-staged": "^10.5.3"
  },
  "scripts": {
    "check": "tsc",
    "dev": "nodemon --watch . --exec \"concurrently \\\"npm run --silent test\\\" \\\"npm run --silent check\\\"\"",
    "lint": "eslint **/*.{js,ts}",
    "lint:fix": "eslint **/*.{js,ts} --fix",
    "test": "node --unhandled-rejections=strict ./test/index.test.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run check && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "cross-env CI=true eslint --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RobinBlomberg/http-server.git"
  },
  "bugs": {
    "url": "https://github.com/RobinBlomberg/http-server/issues"
  },
  "homepage": "https://github.com/RobinBlomberg/http-server"
}
